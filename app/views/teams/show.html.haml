%h1= @team.title

%h2
  = @team.description
  Welcome to the
  = @team.alias

- case (@is_joined[0])

  - when false:
    - form_tag '/teams_users' do
      = submit_tag 'Join'

  - when true:
    - unless @is_joined[1] == 'reservation'
      %a{:href => new_diary_path} write
      %ul
        - for user in @team.user
          %li
            %a{:href => '/users/'+user.alias+'/@/'+@team.alias}
              = user.alias
      - if @is_joined[1] == 'administrator'
        %a{:href =>  '/teams/'+@team.alias+'/preference'} preference
    - else 
      %p 가입승인진행중
