- unless flash[:notice].to_s.empty?
  %p#error_message
    = flash[:notice]

- form_tag do
  %dl
    %dt Email	
    %dd= text_field_tag :email, params[:email]
    %dt Password
    %dd= password_field_tag :password, params[:password]
  %p
    = submit_tag 'login'
    %a(href="/users/new")
      sign Up 



